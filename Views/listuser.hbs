<div class="container" style="margin-top: 30px;">
    <div class="mt-4">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Stt</th>
                        <th scope="col">Image</th>
                        <th scope="col">Email</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Chức Năng</th>
                    </tr>
                </thead>


                {{#each users}}
                <tbody>
                    <tr>
                        <td>{{sum @index 1}}</td>
                        <td><img src="../{{this.image}}" alt="fail" style="width: 100px;"></td>
                        <td>{{this.email}}</td>
                        <td>{{this.username}}</td>
                        <td>
                            <a href="/user/{{this._id}}/edit" class="btn btn-primary">UPDATE</a>
                            <a type="button" class="btn btn-danger" data-toggle="modal"
                                data-target="#delete-User-model" data-id="{{this._id}}">
                                DELETE
                            </a>
                        </td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
    </div>
</div>

<div id="delete-User-model" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông Báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn Có Chắc Là Muốn Xóa Nó Không ?</p>
                <p>Khi Xóa Dữ Liệu Sẽ Không Khôi Phục Được !</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete-user" type="button" class="btn btn-danger">DELETE</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<form name="from-delete" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var idsp;
        var deletefrom = document.forms['from-delete']
        $('#delete-User-model').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            idsp = button.data('id');
        });
        var btnDelete = document.getElementById('btn-delete-user')
        btnDelete.onclick = function () {
            deletefrom.action = idsp + '?_method=DELETE';
            deletefrom.submit();
        }
    })
</script>